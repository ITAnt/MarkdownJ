<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_live_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxHeight="64dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone" />

        <com.itant.md.view.CursorEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="start"
            android:hint="@string/let_us_go"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="58dp"
            android:textColor="@color/black_title"
            android:textColorHint="@color/gray_hint"
            android:textSize="18sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/sv_quick"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:fadeScrollbars="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/textActionBarColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_edit_paste"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_paste"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_h1"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_header_1"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_h2"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_header_2"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_h3"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_header_3"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_list_point"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_list_point"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_block"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_block"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_code"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_code"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_code_snippet"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_code_snippet"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_bold"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_bold"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_italic"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_italic"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_split"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_split"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_checkbox"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_checkbox"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_delete_line"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_delete"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_underline"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_underline"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_photo"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_photo"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_link"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_link"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_table"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_table"
                android:visibility="gone"
                app:tint="@color/black_standard" />

            <ImageView
                android:id="@+id/iv_edit_time"
                style="@style/EditStyle"
                android:src="@drawable/ic_edit_time"
                android:visibility="gone"
                app:tint="@color/black_standard" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/sv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </ScrollView>
</FrameLayout>